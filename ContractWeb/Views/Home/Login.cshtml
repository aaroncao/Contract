@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title></title>
    
    <!-- Reset Stylesheet -->
    <link rel="stylesheet" href="@Url.Content("~/Content/reset.css")" type="text/css" media="screen" />
    <!-- Main Stylesheet -->
    <link rel="stylesheet" href="@Url.Content("~/Content/style.css")" type="text/css" media="screen" />
    <!-- Invalid Stylesheet. This makes stuff look pretty. Remove it if you want the CSS completely valid -->
    <link rel="stylesheet" href="@Url.Content("~/Content/invalid.css")" type="text/css" media="screen" />

    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.8.3.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/simpla.jquery.configuration.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/facebox.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.wysiwyg.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.easyui.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/system.js")"></script>
</head>
<body id="login">
    <div id="login-wrapper" class="png_bg">
        <div id="login-top">
            <h1>Simpla Admin</h1>
            <!-- Logo (221px width) -->
            <!-- <img id="logo" src="@Url.Content("~/Content/images/logo.png")" alt="环宇传媒" /> -->
        </div>
        <!-- End #logn-top -->
        <div id="login-content">
                <div class="notification information png_bg">
                    <div id="msglbl"> 欢迎使用该系统平台 </div>
                </div>
                <p>
                    <label>Username</label>
                    <input id="txtUser" class="text-input" type="text" />
                </p>
                <div class="clear"></div>
                <p>
                    <label>Password</label>
                    <input id="txtPwd" class="text-input" type="password" />
                </p>
                <div class="clear"></div>
                <p>
                    <input class="button" style="font-size:12px !important;" type="button" value="登 录" onclick="login()" />
                </p>
        </div>
        <!-- End #login-content -->
    </div>
    <!-- End #login-wrapper -->

<script>
    function login() {
        var user = $("#txtUser").val();
        var password = $("#txtPwd").val();

        $("#msglbl").html("正在登录，请稍候...");

        if (user.trim() == "") {
            $("#msglbl").html("用户名不能为空");
            return;
        }

        if (password.trim() == "") {
            $("#msglbl").html("密码不能为空");
            return;
        }

        $.get("/Home/LogOn?userID=" + user + "&password=" + password + "&time=" + (new Date()).getTime(), function (data) {
            if (data == 1)
                location.href = "/Home/index";
            else
                $("#msglbl").html("登录失败");
        });
    }

</script>
</body>
</html>
