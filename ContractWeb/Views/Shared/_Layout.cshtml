<body>
    <input id="moduleNum" style="display:none;" value="@ViewBag.menu" />
    @{
        int module = ViewBag.menu;
        ContractWeb.Models.UserInfo info = ContractWeb.Common.BaseHelper.getUserInfo();
        //List<ContractWeb.Models.MenuItem> menus = ContractWeb.Common.BaseHelper.getMenuData();
    }

    <div id="body-wrapper">
        <!-- Wrapper for the radial gradient background -->
        <div id="sidebar">
            <div id="sidebar-wrapper">
