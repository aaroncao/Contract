                <div id="profile-links" style="font-size:12px;margin:20px 0px;">                    
                    <div style="float:left;"><img src="@Url.Content("~/Content/images/user.png")" /></div>
                    <div style="float:left;color:white;">@info.userID</div>
                    <div style="float:right;"><a href="/UserManage/EditPwd">修改密码</a> | <a href="#">退出</a></div>
                </div>
                <ul id="main-nav">
                    
                </ul>                    
            </div>
        </div>
        <!-- End #sidebar -->
        <div id="main-content">
            @RenderBody()
        </div>
        <!-- End #main-content -->
        
    </div>
</body>
</html>



