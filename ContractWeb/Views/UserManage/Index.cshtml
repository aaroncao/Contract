<div class="ftitle">用户管理</div>
<p />

<!-- Table -->
<table id="UserList" style="width: 900px; height: 300px;" data-options="singleSelect:true,idField:'id',url:'UserManage/getUserList'" toolbar="#toolbar">
    <thead>
        <tr>
            <th data-options="field:'userID',width:80">用户名</th>
            <th data-options="field:'name',width:100">姓名</th>
            <th data-options="field:'sex',width:50">性别</th>
            <th data-options="field:'card',width:130">身份证号</th>
            <th data-options="field:'tel',width:100">联系方式</th>
            <th data-options="field:'address',width:200">联系地址</th>
            <th data-options="field:'date',width:120">注册日期</th>
            <th data-options="field:'state',width:80">状态</th>
        </tr>
    </thead>
</table>

<!-- Toolbar -->
<div id="toolbar">
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-add" plain="true" onclick="newUser()">New User</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-edit" plain="true" onclick="editUser()">Edit User</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-remove" plain="true" onclick="destroyUser()">Remove User</a>
</div>

<!-- dialog -->
<div id="dlg" class="easyui-dialog" style="width: 400px; height: 280px; padding: 10px 20px" closed="true" buttons="#dlg-buttons">
    <div class="ftitle">User Information</div>
    <form id="fm" method="post" novalidate>
        <div class="fitem">
            <label>用户名:</label>
            <input name="firstname" class="easyui-validatebox" required="true">
        </div>
        <div class="fitem">
            <label>真实姓名:</label>
            <input name="lastname">
        </div>
        <div class="fitem">
            <label>所属岗位:</label>
            <input name="phone" class="easyui-validatebox" required="true">
        </div>
    </form>
</div>

<!-- Dialog Buttons -->
<div id="dlg-buttons">
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-ok" onclick="saveUser()">保存</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')">取消</a>
</div>

<script>
    $(function () {
        $('#UserList').datagrid();
    });

    var url;
    function newUser() {
        $('#dlg').dialog('open').dialog('setTitle', 'New User');
        $('#fm').form('clear');
        url = 'save_user.php';
    }
</script>
